<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/card_root_view_padding">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/land_image_heigth"
                android:contentDescription="@string/a_view_of_gorgonzola"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/title_padding_bottom"
                android:paddingEnd="@dimen/title_padding_end"
                android:paddingLeft="@dimen/title_padding_left"
                android:paddingRight="@dimen/title_padding_right"
                android:paddingStart="@dimen/title_padding_start"
                android:paddingTop="@dimen/title_padding_top"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/description_padding_bottom"
                android:paddingEnd="@dimen/description_padding_end"
                android:paddingLeft="@dimen/description_padding_left"
                android:paddingRight="@dimen/description_padding_right"
                android:paddingStart="@dimen/description_padding_start"
                android:paddingTop="@dimen/description_padding_top"
                android:textSize="@dimen/text_description_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>